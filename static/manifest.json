{
  "name": "Scryfall - Casual Challenge Checker",
  "description": "Checks decklists on scryfall.com if they are legal for the 'Casual Challenge' a custom MtG format created by XieLong and Janosch.exe",
  "version": "0.6.1",
  "manifest_version": 3,
  "author": "Raoul Zander",
  "homepage_url": "https://sites.google.com/view/a5magicdivision/casual-challenge",
  "icons": {
    "16": "/icons/16x.png",
    "32": "/icons/32x.png",
    "48": "/icons/48x.png",
    "128": "/icons/128x.png"
  },
  "action": {
    "default_title": "Scryfall - Casual Challenge Checker",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/16x.png",
      "32": "/icons/32x.png",
      "48": "/icons/48x.png",
      "128": "/icons/128x.png"
    }
  },
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://*.scryfall.com/"
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://scryfall.com/*/decks/*",
        "https://scryfall.com/search?*"
      ],
      "run_at": "document_idle",
      "css": [
        "styles/decklist-content-script.css"
      ],
      "js": [
        "decklist-content-script.js"
      ]
    },
    {
      "matches": [
        "https://scryfall.com/card/*"
      ],
      "run_at": "document_idle",
      "css": [
        "styles/single-card-content-script.css"
      ],
      "js": [
        "single-card-content-script.js"
      ]
    }
  ]
}
